<body>
    <div class="cabecera">
        <img src="img/Logo.png" alt="Tareas" id="logo">
        <div class="user">
            <div class="userimg">
                <img src="img/img2315.png" class="avatar">
            </div>
            <div>
                <div class="username">usuario@ucm.es</div>
                <div class="connect_container">
                    <a class="action_button" href="">Desconectar</a>
                </div>
            </div>
        </div>
    </div>

    <div class="tareas">
        <ul>
            <% taskList.forEach(task => { %>
                <li>
                    <% if (task.done) { %>
                        <span>
                            <span class="finalizada"><%= task.text %></span>
                        </span>
                        <% } %>
                            <% if (!task.done) { %>
                                <span>
                                <span class="enunciado"><%= task.text %></span>
                                <% task.tags.forEach(tag => { %>
                                    <span class="tag"> <%= tag %> </span>
                                    <% }); %>
                                        </span>
                                        <form method="GET" action="/finish">
                                            <input class="finalizada" value="Marcar finalizada" type="submit">
                                            <input type="hidden" name="id" value=" <%= task.id %> ">
                                        </form>
                                        <% } %>
                                            <% }); %>
                </li>
                <li class="nueva">
                    <form method="POST" id="formNueva" action="/addTask">
                        <input name="taskText" type="text">
                        <input value="Añadir" type="submit">
                    </form>
                </li>
        </ul>
